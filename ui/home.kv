#:import APP_NAME config.APP_NAME
#:import COMPANY_NAME config.COMPANY_NAME

MDScreen:
    name: "home"
    BoxLayout:
        orientation:'vertical'

        MDToolbar:
            title: APP_NAME
            size_hint: 1,.08
            right_action_items: [ ["clock", lambda x:app.all_chats()]] 
            #button for add more dummpy chats
            elevation: 5
        
        MDBottomNavigation:
            id: android_tabs
            
            MDBottomNavigationItem:        
                name: "chat_scr"
                text: f"CHATS"
                icon: "chat"
                ScrollView:
                    MDList:
                        id: chat_tab
        
            MDBottomNavigationItem:
                name: "search_scr"
                text: f"SEARCH"
                icon: "account-search"
                