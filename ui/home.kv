#:import APP_NAME config.APP_NAME
#:import COMPANY_NAME config.COMPANY_NAME

MDScreen:
    name: "home"
    BoxLayout:
        orientation:'vertical'

        MDToolbar:
            title: APP_NAME
            size_hint: 1,.08
            right_action_items: [ ["account", lambda x:app.change_screen("profile")]] 
            elevation: 5
        
        MDBottomNavigation:
            id: android_tabs
            
            MDBottomNavigationItem:        
                name: "chat_scr"
                text: f"CHATS"
                icon: "chat"
                ScrollView:
                    MDList:
                        id: chat_tab
        
            MDBottomNavigationItem:
                name: "search_scr"
                text: f"SEARCH"
                icon: "account-search"

                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: dp(5)
                    padding: dp(10)

                    MDBoxLayout:
                        adaptive_height: True

                        MDTextField:
                            id: search_field
                            hint_text: 'Search'
                            # on_text: root.set_list_md_icons(self.text, True)
                        
                        MDIconButton:
                            icon: 'magnify'
                            on_release: app.search_account(search_field.text)

                    ScrollView:
                        MDList:
                            id: search_items
              