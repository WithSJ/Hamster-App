                MDCard:
                    size_hint: None,None
                    size: root_chatroom.size[0], "50dp"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    spacing: dp(2)
                    padding: dp(2)
                    
                    MDTextField:
