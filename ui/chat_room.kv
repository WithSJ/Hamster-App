        # md_bg_color: app.theme_cls.primary_color
        orientation:'vertical'

        MDToolbar:
            id:profile_bar
            title: "@username"
            size_hint: 1,0.08
            left_action_items: [ ["arrow-left", lambda x:app.change_screen("home")]] 
            elevation: 5
        MDBoxLayout:
            # md_bg_color: app.theme_cls.primary_color
            orientation:'vertical'
            
            MDBoxLayout:
                id: root_chatroom
