<Profile_Screen>:
    name: "profile"
    MDBoxLayout:
        # md_bg_color: app.theme_cls.primary_color
        orientation:'vertical'

        MDToolbar:
            id:profile_bar
            title: "Profile"
            size_hint: 1,0.08
            # pos_hint: {"center_y":.965}
            left_action_items: [ ["arrow-left", lambda x:app.screen_manager.change_screen("home")]] 
            elevation: 5

        MDBoxLayout:
            orientation:'vertical'
            spacing: "100dp"
            
            MDCard:                
                orientation:'vertical'
                size_hint: None, None
                size: "250dp", "250dp"
                pos_hint: {"center_x": .5, "center_y": .5}

                Button:
                    id:profile_image
                    background_normal: "assets//img//profile.jpg"
                    background_down: "assets//img//profile.jpg"
                    on_release: root.change_profile_img()
            
                    
            MDList:

                TwoLineAvatarIconListItem:
                    id:profile_name
                    text: "Hamster"
                    secondary_text: "Fullname"

                    IconLeftWidget:
                        icon: "account"
                    
                    IconRightWidget:
                        icon: "pen"
                        on_release: root.change_profile_data(profile_name)
                    
                TwoLineAvatarIconListItem:
                    id:profile_username
                    text: "@hamster"
                    secondary_text: "Username"
                    IconLeftWidget:
                        icon: "at"
                    
                    IconRightWidget:
                        icon: "pen-lock"
                        # on_release: app.change_text_data(profile_username)
                
                TwoLineAvatarIconListItem:
                    id:profile_email
                    text: "hamster@gmail.com"
                    secondary_text: "Email"

                    IconLeftWidget:
                        icon: "email"
                    
                    IconRightWidget:
                        icon: "pen"
                        on_release: root.change_profile_data(profile_email)
